/**index.wxss**/
@-webkit-keyframes sk-bounce {
  0%, 100% { -webkit-transform: scale(0.0) }
  50% { -webkit-transform: scale(1.0) }
}

@keyframes sk-bounce {
  0%, 100% { 
    transform: scale(0.0);
    -webkit-transform: scale(0.0);
  } 50% { 
    transform: scale(1.0);
    -webkit-transform: scale(1.0);
  }
}

.category {
  color: #fff;
  box-sizing: border-box;
  font-size: 28rpx;
}

.tab {
  width: 25%;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  height: 80rpx;
}

.tab-img {
  width: 48rpx;
  height: 48rpx;
  margin-right: 10rpx;
}

.tab text {
  color: #666;
  display: block;
}

.spinner-container {
  box-sizing: border-box;
  padding: 20rpx 0;
}

.spinner {
  width: 80rpx;
  height: 80rpx;
  position: relative;
  margin: 0 auto;
}

.double-bounce1, .double-bounce2 {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  background-color: #fdbe34;
  opacity: 0.6;
  position: absolute;
  top: 0;
  left: 0;
  animation: sk-bounce 2.0s infinite ease-in-out;
}

.double-bounce2 {
  animation-delay: -1.0s;
}